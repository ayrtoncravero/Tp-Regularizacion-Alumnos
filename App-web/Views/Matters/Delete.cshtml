@model App_web.Matter

@{
    ViewData["Title"] = "Borrar - Materia";
}

<h1>Borrar materia</h1>

<h3>¿Estás segura de que quieres eliminar una materia?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
